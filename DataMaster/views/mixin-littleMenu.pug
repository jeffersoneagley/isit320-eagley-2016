mixin littleMenu
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                +littleMenuBranding
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav
                    +littleMenuNavRoutes
                ul#navbarSignInOutMenu.navbar.navbar-nav.navbar-right

mixin littleMenuNavRoutes
    li
        button.btn.navbar-btn.btn-primary( fishroute='/editor/db/home' ) Database
    li
        button.btn.navbar-btn.btn-primary( fishroute='/editor/npc/home' ) NPC's
    li
        button.btn.navbar-btn.btn-primary( fishroute='/editor/level/home' ) Levels

mixin littleMenuBranding
    a.navbar-brand(href='/')
        img(alt='Isit320', src='favicon.png')
