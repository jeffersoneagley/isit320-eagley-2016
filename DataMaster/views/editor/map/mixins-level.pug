mixin levelListItem(level)
    .row
        pre #{level._id}
        .panel.row
            div.col-sm-2.col-xs-12.alert.alert-success
                .col-xs-12 mapId: #{level.name}
            div.col-sm-3.col-xs-12.alert.alert-info
                .col-xs-12 Description:
                .col-xs-12
                    if level.description.length>19
                        | #{level.description.substring(0,17)+"..."}
                    else
                        | #{level.description}
            div.col-sm-4.col.xs-12.alert.alert-info
                .col-xs-12 Next level id:
                .col-xs-12
                    if level.nextLevel.length>19
                        | #{level.nextLevel.substring(0,17)+"..."}
                    else
                        | #{level.nextLevel}
            div.col-sm-3.col-xs-12
                button(class='btn btn-primary btn-lg btn-block'
                fishroute='/editor/npc/' + level._id
                id='buttonEditNpc'+leve._id
                ) edit
